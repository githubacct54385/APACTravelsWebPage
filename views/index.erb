<script src="https://checkout.stripe.com/checkout.js"></script>

<!-- Fly to Singapore Form -->
<div class="img__wrap">
	<img id="image" src="/singapore.jpg">
<div class="img__description_layer">
	<form action="/chargeSingapore" method="POST" id="singaporeForm">
		<script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
            data-key="<%= settings.publishable_key %>"
            data-description="Flight to Singapore + Hotel"
            data-amount="80000"
            data-label="Fly Singapore"
            data-locale="auto"></script>
    </form>
  </div>
</div>

